<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE5B4"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       >

       <TextView
           android:layout_width="500dp"
           android:layout_height="50dp"
           android:text="Land Transportaion Office"
           android:gravity="center"
           android:textSize="19sp"
           android:layout_marginTop="20dp"
           android:textStyle="bold"
           android:fontFamily="@font/raleway"
           android:textColor="@color/black"
           android:id="@+id/toplto"
           />
       <TextView
           android:layout_width="500dp"
           android:layout_height="50dp"
           android:text="Registration Form"
           android:gravity="center"
           android:textSize="19sp"
           android:layout_marginTop="40dp"
           android:textStyle="bold"
           android:fontFamily="@font/raleway"
           android:textColor="@color/black"
           android:id="@+id/belowlto"
           />
       <ImageView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:src="@drawable/lto"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="20dp"
           android:layout_marginRight="20dp"
           />
       <ImageView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:src="@drawable/phflag"
           android:layout_marginTop="20dp"
           android:layout_margin="20dp"
           />

       <EditText
           android:id="@+id/lname"
           android:layout_width="185dp"
           android:layout_height="60dp"
           android:layout_below="@id/belowlto"
           android:gravity="center"
           android:layout_marginTop="70dp"
           android:layout_marginLeft="10dp"
           android:background="@drawable/bg_border"
           android:hint="Last Name" />
       <EditText
           android:id="@+id/fname"
           android:layout_width="185dp"
           android:layout_height="60dp"
           android:layout_below="@id/belowlto"
           android:gravity="center"
           android:layout_marginTop="70dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/bg_border"
           android:hint="First Name"
           android:layout_alignParentEnd="true"
           />
       <EditText
           android:id="@+id/mname"
           android:layout_width="183dp"
           android:layout_height="60dp"
           android:layout_below="@id/belowlto"
           android:gravity="center"
           android:layout_marginTop="145dp"
           android:layout_marginLeft="10dp"
           android:background="@drawable/bg_border"
           android:hint="Middle Name" />
       <EditText
           android:id="@+id/datebirth"
           android:layout_width="188dp"
           android:layout_height="60dp"
           android:layout_below="@id/belowlto"
           android:gravity="center"
           android:layout_marginTop="145dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/bg_border"
           android:hint="Date of Birth: mm-dd-yy"
           android:layout_alignParentEnd="true"
           />
       <EditText
           android:id="@+id/address"
           android:layout_width="390dp"
           android:layout_height="60dp"
           android:layout_below="@id/belowlto"
           android:gravity="center"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="220dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/bg_border"
           android:hint="Address: Brgy/Municipality/Province "

           />
       <EditText
           android:id="@+id/nationality"
           android:layout_width="260dp"
           android:layout_height="60dp"
           android:layout_below="@id/belowlto"
           android:gravity="center"
           android:layout_marginTop="295dp"
           android:layout_marginLeft="10dp"
           android:background="@drawable/bg_border"
           android:hint="Nationality"
           />

       <EditText
           android:id="@+id/sex"
           android:layout_width="100dp"
           android:layout_height="60dp"
           android:layout_below="@id/belowlto"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="294dp"
           android:layout_marginEnd="12dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/bg_border"
           android:gravity="center"
           android:hint="Sex: M/F" />

       <Button
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/belowlto"
           android:layout_centerInParent="true"
           android:layout_marginTop="490dp"
           android:background="@drawable/bg_border"
           app:backgroundTint="@color/orange"
           android:id="@+id/registerBtn"
           android:text="Register"
           android:textAllCaps="false"
           android:textStyle="bold"
           android:fontFamily="@font/raleway"
           android:textSize="18sp"
           />


   </RelativeLayout>

</RelativeLayout>